<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BBDEFB"
    tools:context=".InApp">


    <Button
        android:id="@+id/btnlogout"
        android:layout_width="50dp"
        android:layout_height="30dp"

        android:layout_marginStart="51dp"
        android:layout_marginBottom="72dp"
        android:text="LogOut"
        android:textSize="7dp"
        app:layout_constraintBottom_toTopOf="@+id/cardView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.894"
        app:layout_constraintStart_toEndOf="@+id/txtIni"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.166">

    </Button>

    <TextView
        android:id="@+id/txtIni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/benvingut"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="350dp"

        android:layout_height="270dp"
        android:layout_marginTop="64dp"
        android:elevation="2dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtIni">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#FFCDD2">

                <ImageView
                    android:id="@+id/imgUser"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="300dp"
                    android:layout_marginTop="10dp"
                    android:visibility="visible"
                    tools:srcCompat="@tools:sample/avatars" />


                <TextView
                    android:id="@+id/txtTitol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="150dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/poppinsbold"
                    android:text="Perfil"
                    android:textSize="16dp" />

            </RelativeLayout>


            <TextView
                android:id="@+id/txtMail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/poppinsbold"
                android:paddingLeft="10dp"
                android:text="Email: "
                android:textSize="13dp" />

            <TextView
                android:id="@+id/txtNom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsbold"
                android:paddingLeft="10dp"
                android:text="Nom: "
                android:textSize="13dp" />

            <TextView
                android:id="@+id/txtCognom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsbold"
                android:paddingLeft="10dp"
                android:text="Cognom: "
                android:textSize="13dp" />

            <TextView
                android:id="@+id/txtTlf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsbold"
                android:paddingLeft="10dp"
                android:text="Telèfon: "
                android:textSize="13dp" />

            <RelativeLayout
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_marginTop="30dp">
                <RelativeLayout
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="130dp"
                    android:layout_marginTop="35dp"
                    android:background="@drawable/button_back">

                    <TextView
                        android:id="@+id/txtborrar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="1dp"
                        android:fontFamily="@font/poppinsbold"
                        android:text="Borrar Usuari"
                        android:textSize="9dp">

                    </TextView>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="280dp"
                    android:layout_marginTop="35dp"
                    android:background="@drawable/button_back">

                    <TextView
                        android:id="@+id/txtEditar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="1dp"
                        android:fontFamily="@font/poppinsbold"
                        android:text="Editar"
                        android:textSize="9dp">

                    </TextView>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="35dp"
                    android:background="@drawable/button_back">

                    <TextView
                        android:id="@+id/txtFactura"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/poppinsbold"
                        android:text="Factura"
                        android:textSize="9dp">

                    </TextView>

                </RelativeLayout>
            </RelativeLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView

        android:id="@+id/cardReservesTennis"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="71dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="190dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="#FFFFFF"
                app:srcCompat="@drawable/tennis" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#A5D6A7"
                android:fontFamily="@font/poppinsbold"
                android:gravity="center"
                android:text="Reserva Pista"
                android:textSize="18dp">

            </TextView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardUbi"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="65dp"
        app:cardCornerRadius="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardReservesTennis">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:srcCompat="@drawable/map" />

            <TextView
                android:id="@+id/textEditarReserves"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#90CAF9"
                android:fontFamily="@font/poppinsbold"
                android:gravity="center"
                android:text="Ubicació"
                android:textSize="18dp">

            </TextView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppinsbold"
        android:onClick="setEditarReserves"
        android:text="Edita les reserves"
        android:textSize="9dp"
        app:layout_constraintBottom_toTopOf="@+id/cardReservesTennis"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.823"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2"
        app:layout_constraintVertical_bias="0.924" />


</androidx.constraintlayout.widget.ConstraintLayout>